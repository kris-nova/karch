karch-reset

# Calico Pod CIDR = 192.168.0.0/16

kubeadm init \
        --pod-network-cidr=192.168.0.0/16 \
        --apiserver-advertise-address=10.6.6.100 \
        --apiserver-cert-extra-sans="nivenly.com" \
        --control-plane-endpoint="nivenly.com" \
        --node-name="alice"

cp /etc/kubernetes/admin.conf ${HOME}/.kube/config
